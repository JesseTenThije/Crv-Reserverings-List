@model CCSB.Models.Crv
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> signinManager

@{
    ViewData["Title"] = "Verwijderen";
}

@if (signinManager.IsSignedIn(User) && User.IsInRole("Beheerder"))
{
    <h1>Verwijderen van een voertuig</h1>

    <h3>Weet je zeker dat je dit wilt verwijderen?</h3>
    <div>
        <h4>Crv</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CrvName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CrvName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CrvType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CrvType)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CrvLength)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CrvLength)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CrvElectricity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CrvElectricity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CrvPlate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CrvPlate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ApplicationUser)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ApplicationUser.Email)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Terug naar lijst</a>
        </form>
    </div>
}
else
{
    <ul class="nav navbar-nav">
    </ul>
}
